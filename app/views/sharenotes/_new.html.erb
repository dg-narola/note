<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Share Notes</h3>
    </div>
    <%= form_for([ @note, @sharenote ]) do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <div class="form-group">
          <%= f.label :email , class:"control-label" %>
          <%= f.text_field :email , class: "form-control", :required => true%>
        </div>
        <div class="form-group">
          <%= f.hidden_field :user_id, class: "control-label" %>
          <%= f.hidden_field :user_id, value: current_user.id , class: "from-control"%>
        </div>
        <div class="form-group">
          <%= f.label :permissions, class: "control-label", style:"padding-right:20px;"%>
          <%= f.label :edit, class: "control-label" %>
          <%= f.check_box :edit,  class: "from-control"%>
          <%= f.label :view, class: "control-label", style:"padding-left:20px;" %>
          <%= f.check_box :view,  class: "from-control"%>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Send",class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn btn-danger", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
