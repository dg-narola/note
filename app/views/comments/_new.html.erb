<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>New Comment</h3>
    </div>
    <%= form_for([ @note, @comment ], remote: true) do |f| %>
    <div class="modal-body">
      <ul class="errors"></ul>
      <div class="form-group">
        <%= f.label :comment , class:"control-label" %>
        <%= f.text_field :comment , class: "form-control", required: true%>
      </div>
      <div class="form-group">
        <%= f.hidden_field :user_id, class: "control-label" %>
        <%= f.hidden_field :user_id, value: current_user.id , class: "from-control"%>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary", remote: true %>
      <%= link_to "Cancel",notes_path , class: "btn btn-danger", data: {dismiss: "modal"} %>
    </div>
    <% end %>
  </div>
</div>
