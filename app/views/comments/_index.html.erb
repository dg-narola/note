<% comments.each do |comment| %>
  <p>
    <%= User.find(comment.user_id).username %>:  <%= comment.comment %>
  </p>
  <p>
     <%= link_to 'Destroy Comment', [comment.note, comment],
                   method: :delete,
                   data: { confirm: 'Are you sure?' } %>|

      <%= link_to 'Edit Comment', edit_note_comment_path(comment.note, comment),
      remote: true %>
  </p>
  ---------------------------------------------------<br>
<% end %>
