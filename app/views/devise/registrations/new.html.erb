<div class="container" align="center">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4 well"  style="background-color:ligthgrey;">
      <h1 style="color:blue;">Note</h1><br/>
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <table>
        <tr>
          <div class="field">
            <td><%= f.label :email %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </div>
        </tr>
        <tr>
          <td><br/></td>
        </tr>
          <tr>
            <div class="field">
              <td><%= f.label :username %></td>
              <td><%= f.text_field :username, autofocus: true, autocomplete: "username" %></td>
            </div>
          </tr>
          <tr>
            <td><br/></td>
          </tr>
        <tr>
          <div class="field">
            <td>  <%= f.label :password %></td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <td>   <%= f.password_field :password, autocomplete: "new-password" %></td>
          </div>
        </tr>
        <tr>
          <td><br/></td>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :password_confirmation %></td>
            <td>  <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </div>
        </tr>
        <tr>
          <td><br/></td>
        </tr>
        <tr>
          <div class="actions">
            <td colspan="2" align="center">  <%= f.submit "Sign up", class: "btn btn-primary" %></td>
          </div>
        </tr>


      </table>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>
